{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "local://requests/request-v1.0.0.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "$ref": "local://definitions-v1.0.0.json#/$schema"
    },
    "id": {
      "$ref": "local://definitions-v1.0.0.json#/identifier"
    },
    "request_type": {
      "type": "string"
    },
    "title": {
      "$type": "string"
    },
    "description": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "payload": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "string"
        }
      }
    },
    "subject": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      }
    },
    "receiver": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      }
    },
    "created_by": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "user": {
              "type": "integer"
            }
          }
        }
      ]
    }
  }
}
